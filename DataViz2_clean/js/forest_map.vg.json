{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Forest Area as a percentage of Total Land Area",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  
  "data": {
    "url": "https://raw.githubusercontent.com/SentientSchnitzel/FIT3179_DataVisualization/main/DataViz2_clean/data/percent-forest-cover-copy.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "Year_select",
      "value": 2010,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2020,
        "step": 1,
        "name": "Year:  "
      }
    }
  ],

  "hconcat": [
    {
      "layer":[
        {
          "data": {
            "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {"tooltip": {"field": "note"}}
        },
        
        {
          "transform": [
            {
              "lookup": "Country",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/SentientSchnitzel/FIT3179_DataVisualization/main/w8/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
                  "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                },
                "key": "properties.NAME"
              },
              "as": "geo"
            },
            {
              "filter": "datum.Year == Year_select"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "white"},
          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "color": {
              "field": "Forestcover",
              "type": "quantitative",
              "title": "Forest Cover (%)",
              "scale": {"type": "linear", "range": ["#fec44f", "#006d2c"]}
              },
            "tooltip": [
              {"field": "Country", "type": "nominal", "title": "Country"},
              {"field": "Forestcover", "type": "quantitative", "title": "Forest cover", "format": ".2f"}        
            ]
          }
        }
      ]
    },
    {
      "layer":[
        "transform": [
          {
            "filter": "datum.Year == Year_select"
          },
          {
            "joinaggregate": [{
              "op": "mean",
              "field": "Forestcover",
              "as": "avgCover"
            }]
          },
          {
            "mark": {"type": "bar", "color": "gray"},
            "encoding": {
              "x": {},
              "y": {},
              "color": {
                "field": "avgCover",
                "type": "quantitative",
                "title": "Average Cover (%)",
                "scale": {"type": "linear", "range": ["#fec44f", "#006d2c"]}
                },
              "tooltip": [
                {"field": "Forestcover", "type": "quantitative", "title": "Forest cover", "format": ".2f"}        
              ]
            }
          }
        ]
      ]
    }
  ]
}